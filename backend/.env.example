PORT=3001
DB_PATH=./database.db
NODE_ENV=development

# Jira Configuration
JIRA_DOMAIN=your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_TOKEN=your-jira-api-token

# OpenCode Configuration
# OpenCode SDK uses your existing opencode subscription
